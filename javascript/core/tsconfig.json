{
	"extends": "@essex/tsconfig-base",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2022",
		"moduleResolution": "Node",
		"lib": ["ESNext", "DOM", "DOM.Iterable", "ES2020.BigInt"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src"]
}
