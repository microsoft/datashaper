{
	"name": "Every operation",
	"description": "Chains every available operation together for an easy look at all UX and output examples",
	"steps": [
		{
			"verb": "aggregate",
			"input": "data/products.csv",
			"output": "aggregate-1",
			"args": {
				"groupby": "ID",
				"column": "FY21 Sales",
				"operation": "sum",
				"to": "Total sales"
			}
		},
		{
			"verb": "aggregate",
			"input": "data/products.csv",
			"output": "aggregate-2",
			"args": {
				"groupby": "ID",
				"column": "Product",
				"operation": "array_agg",
				"to": "Product List"
			}
		},
		{
			"verb": "bin",
			"input": "data/products.csv",
			"output": "bin-1",
			"args": {
				"column": "FY21 Sales",
				"strategy": "auto",
				"to": "Binned"
			}
		},
		{
			"verb": "binarize",
			"input": "data/products.csv",
			"output": "binarize-1",
			"args": {
				"column": "FY21 Sales",
				"to": "FY21 Sales < 10k",
				"criteria": [
					{
						"operator": "<",
						"value": 10000
					}
				]
			}
		},
		{
			"verb": "concat",
			"input": "data/companies.csv",
			"output": "concat-1",
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "dedupe",
			"input": "data/products.csv",
			"output": "dedupe-1",
			"args": {
				"columns": ["ID"]
			}
		},
		{
			"verb": "derive",
			"input": "data/products.csv",
			"output": "derive-1",
			"args": {
				"column1": "FY20 Sales",
				"operator": "+",
				"column2": "FY21 Sales",
				"to": "Combined Sales"
			}
		},
		{
			"verb": "difference",
			"input": "data/companies.csv",
			"output": "difference-1",
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "erase",
			"input": "data/companies.csv",
			"output": "erase-1",
			"args": {
				"value": 150000,
				"column": "Employees"
			}
		},
		{
			"verb": "fetch",
			"input": "data/companies.csv",
			"output": "fetch-1",
			"args": {
				"url": "https://vega.github.io/vega/data/seattle-weather-hourly-normals.csv"
			}
		},
		{
			"verb": "fill",
			"input": "data/companies.csv",
			"output": "fill-1",
			"args": {
				"value": 1,
				"to": "New Column"
			}
		},
		{
			"verb": "filter",
			"input": "data/companies.csv",
			"output": "filter-1",
			"args": {
				"column": "Employees",
				"criteria": [
					{
						"operator": "<=",
						"value": 300000
					}
				]
			}
		},
		{
			"verb": "fold",
			"input": "data/companies.csv",
			"output": "fold-1",
			"args": {
				"columns": ["Name", "Employees"],
				"to": ["key", "value"]
			}
		},
		{
			"verb": "groupby",
			"input": "data/products.csv",
			"output": "groupby-1",
			"args": {
				"columns": ["ID"]
			}
		},
		{
			"verb": "impute",
			"input": "data/companies2.csv",
			"output": "impute-1",
			"args": {
				"column": "Name",
				"value": "emptyValue"
			}
		},
		{
			"verb": "intersect",
			"input": "data/companies.csv",
			"output": "intersect-1",
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "join",
			"input": "data/companies.csv",
			"output": "join-1",
			"args": {
				"other": "data/products.csv",
				"on": ["ID", "ID"]
			}
		},
		{
			"verb": "lookup",
			"input": "data/companies.csv",
			"output": "lookup-1",
			"args": {
				"other": "data/products.csv",
				"on": ["ID", "ID"],
				"columns": ["Product"]
			}
		},
		{
			"verb": "merge",
			"input": "data/products.csv",
			"output": "merge-1",
			"args": {
				"strategy": "concat",
				"to": "result",
				"columns": ["FY20 Sales", "FY21 Sales"]
			}
		},
		{
			"verb": "pivot",
			"input": "data/companies.csv",
			"output": "pivot-1",
			"args": {
				"key": "ID",
				"value": "Name",
				"operation": "any"
			}
		},
		{
			"verb": "orderby",
			"input": "data/companies.csv",
			"output": "orderby-1",
			"args": {
				"orders": [
					{
						"column": "Employees",
						"direction": "asc"
					}
				]
			}
		},
		{
			"verb": "recode",
			"input": "data/companies.csv",
			"output": "recode-1",
			"args": {
				"column": "ID",
				"to": "Greetings",
				"map": {
					"1": "Hello",
					"2": "Hola",
					"3": "Aloha",
					"4": "Yo",
					"5": "G'day"
				}
			}
		},
		{
			"verb": "rename",
			"input": "data/stocks.csv",
			"output": "rename-1",
			"args": {
				"columns": {
					"Symbol": "symbol",
					"Date": "date",
					"Close": "close",
					"Volume": "volume",
					"Open": "open",
					"High": "high",
					"Low": "low"
				}
			}
		},
		{
			"verb": "rollup",
			"input": "data/companies.csv",
			"output": "rollup-1",
			"args": {
				"to": "count",
				"column": "Product",
				"operation": "count"
			}
		},
		{
			"verb": "sample",
			"input": "data/companies.csv",
			"output": "sample-1",
			"args": {
				"size": 2
			}
		},
		{
			"verb": "select",
			"input": "data/stocks.csv",
			"output": "select-1",
			"args": {
				"columns": ["Symbol", "Date", "Close", "Volume", "Open", "High", "Low"]
			}
		},
		{
			"verb": "spread",
			"input": "aggregate-2",
			"output": "spread-1",
			"args": {
				"column": "Product List"
			}
		},
		{
			"verb": "unfold",
			"input": "fold-1",
			"output": "unfold-1",
			"args": {
				"key": "key",
				"value": "value"
			}
		},
		{
			"verb": "ungroup",
			"input": "data/companies.csv",
			"output": "ungroup-1",
			"args": {
				"columns": ["Name", "Employees"]
			}
		},
		{
			"verb": "union",
			"input": "data/companies.csv",
			"output": "union-1",
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "unorder",
			"input": "data/companies.csv",
			"output": "unorder-1",
			"args": {
				"orders": [{ "column": "Name", "direction": "asc" }]
			}
		},
		{
			"verb": "unroll",
			"input": "aggregate-2",
			"output": "unroll-1",
			"args": {
				"columns": ["Product List"]
			}
		},
		{
			"verb": "window",
			"input": "groupby-1",
			"output": "window-1",
			"args": {
				"to": "First Product",
				"column": "Product",
				"operation": "first_value"
			}
		}
	]
}
