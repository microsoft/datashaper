{
	"name": "@datashaper/project",
	"private": true,
	"description": "Data stuff",
	"scripts": {
		"_release_packages": "turbo run release",
		"_cut_schema": "yarn node scripts/release-schema.mjs",
		"_version_cut": "yarn version apply --all",
		"_copy_versions": "yarn node scripts/copy-schemas.mjs",
		"_fix_packages": "turbo run fix",
		"_check_packages": "turbo run check",
		"rome_check": "rome ci .",
		"rome_fix": "rome check . --apply-suggested",
		"generate:versions": "yarn node scripts/create_versions_file.mjs",
		"clean": "turbo run clean --parallel",
		"build": "turbo run build",
		"bundle": "turbo run bundle",
		"check-deps": "turbo run check-deps",
		"check": "run-s _check_packages rome_check",
		"fix": "run-s _fix_packages rome_fix format",
		"test": "turbo run test",
		"format": "rome format . --write",
		"clean:": "yarn clean",
		"build:": "yarn build",
		"bundle:": "yarn bundle",
		"lint:": "yarn lint",
		"test:": "yarn test",
		"start": "SB_QUIET=true turbo run start --parallel",
		"deploy": "turbo run deploy",
		"ci": "turbo run ci",
		"is_clean": "git diff-index HEAD --quiet || (git status && exit 1)",
		"release": "run-s clean _version_cut ci _release_packages _cut_schema _copy_versions",
		"update_sdks": "yarn dlx @yarnpkg/sdks vscode"
	},
	"devDependencies": {
		"@essex/eslint-config": "^20.5.1",
		"@essex/eslint-plugin": "^20.5.1",
		"@essex/jest-config": "^21.0.20",
		"@essex/scripts": "^24.0.3",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.7",
		"@types/semver": "^7.3.13",
		"arquero": "^5.1.0",
		"eslint": "^8.36.0",
		"npm-run-all": "^4.1.5",
		"rome": "^11.0.0",
		"semver": "^7.3.8",
		"turbo": "1.8.5",
		"typescript": "^4.9.5"
	},
	"workspaces": [
		"javascript/*"
	],
	"packageManager": "yarn@3.4.1"
}
