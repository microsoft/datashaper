{
	"name": "@datashaper/project",
	"private": true,
	"description": "Data stuff",
	"scripts": {
		"_release_packages": "turbo run release",
		"_cut_schema": "yarn node scripts/release-schema.mjs",
		"_version_cut": "yarn version apply --all",
		"_copy_versions": "yarn node scripts/copy-schemas.mjs",
		"_fix_packages": "turbo run fix",
		"_check_packages": "turbo run check",
		"_ci_packages": "turbo run ci",
		"_ci_js_packages": "turbo run ci --filter=\"./javascript/*\"",
		"biome_check": "biome ci .",
		"biome_fix": "biome check . --apply",
		"generate:versions": "yarn node scripts/create_versions_file.mjs",
		"clean": "turbo run clean --parallel",
		"build": "turbo run build",
		"build:javascript": "yarn build --filter=\"./javascript/*\"",
		"bundle": "turbo run bundle",
		"bundle:javascript": "yarn bundle --filter=\"./javascript/*\"",
		"check-deps": "turbo run check-deps",
		"check": "run-s _check_packages biome_check",
		"fix": "run-s _fix_packages biome_fix format",
		"test": "turbo run test",
		"format": "biome format . --write",
		"clean:": "yarn clean",
		"build:": "yarn build",
		"bundle:": "yarn bundle",
		"lint:": "yarn lint",
		"test:": "yarn test",
		"start": "SB_QUIET=true turbo run start --parallel",
		"deploy": "turbo run deploy",
		"ci": "run-s _ci_packages biome_check",
		"ci:javascript": "run-s _ci_js_packages",
		"is_clean": "git diff-index HEAD --quiet || (git status && exit 1)",
		"release": "run-s clean _version_cut ci:javascript _release_packages _cut_schema _copy_versions",
		"update_sdks": "yarn dlx @yarnpkg/sdks vscode"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"@essex/eslint-config": "^20.5.3",
		"@essex/eslint-plugin": "^20.5.3",
		"@essex/jest-config": "^21.0.22",
		"@essex/scripts": "^24.0.5",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.2.5",
		"@types/semver": "^7.5.8",
		"arquero": "^5.4.0",
		"eslint": "^8.42.0",
		"npm-run-all": "^4.1.5",
		"semver": "^7.6.0",
		"turbo": "1.13.3",
		"typescript": "^5.1.3"
	},
	"workspaces": ["javascript/*"],
	"packageManager": "yarn@4.1.0"
}
